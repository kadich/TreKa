@model List<TreKa.Models.Exercise.ExerciseViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; ;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <table>
            <thead>
                <tr>
                    <th>
                        Название упражнения
                    </th>
                    <th>
                        Количество повторений
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model)
                {
                    <tr>
                        <td>
                            @row.ExerciseName
                        </td>
                        <td>
                            @row.Repetition
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
